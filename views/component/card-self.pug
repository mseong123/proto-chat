.d-flex.justify-content-end
    .card.card-custom-1
        .card-body.d-flex.card-body-custom
            p.mb-0.mr-auto #{value.text}
            p.mb-0 
                | &nbsp;
                | &nbsp;
                | &nbsp;
                - var date= new Date(value.time)
            p.mb-0.text-nowrap
                span.small  #{date.getHours()+':'+String(date.getMinutes()).padStart(2, '0')}
                | &nbsp;
                span.small-custom #{date.getDate()+' '+date.toLocaleString('default', { month: 'long' }).substring(0,3)+' '+date.getFullYear().toString().substr(-2)}      