each value in private
    button(id='user'+value._id data-toggle='modal' data-target='#chat'+value._id).list-group-item.list-group-item-action.d-flex.pt-1.pb-1.align-items-center
        span.fa.fa-user.fa-2x.mr-3
        if value.chat
            - var unread=0
            each msg in value.chat
                if msg.unread
                    -unread+=1
            .d-flex.flex-column.mr-auto
                p.mb-0 #{value.nickname}
                    span(id='badge'+value._id class='badge-'+status).badge-custom.d-inline-block.ml-3
                p(class=unread>0?'font-weight-bold':'').mb-0.small.text-truncate.text-truncate-custom #{value.chat[value.chat.length-1].text}
            if unread>0
                span(id='#unread'+value._id).badge.badge-info.badge-pill #{unread}
            else
                span(id='#unread'+value._id).badge.badge-info.badge-pill.d-none
        else
            .d-flex.flex-column.mr-auto
                p.mb-0 #{value.nickname}
                    span(id='badge'+value._id class='badge-'+status).badge-custom
                p.mb-0.small.text-truncate.text-truncate-custom
                span(id='#unread'+value._id).badge.badge-info.badge-pill.d-none
            