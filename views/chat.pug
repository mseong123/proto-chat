doctype html
html
    include shared/head.pug
    body
        .container
            .row
                .offset-sm-2.col-sm-8.offset-md-3.col-md-6.offset-lg-3.col-lg-5.p-0
                    header.chat-header.pt-4
                        div.d-flex.pl-4.pb-3
                            .profile-pic.mr-auto
                                img(src='public/profile-pic'+profilePic).img-fluid
                            div.d-flex.flex-column.justify-content-end.mr-4.dropdown
                                a(href='' data-toggle='dropdown')
                                    span.fa.fa-cog.fa-lg
                                .dropdown-menu.dropdown-menu-right.dropdown-menu-custom
                                    a(href='/app-info').dropdown-item App Info                             
                    section.chat-nickname.d-flex.justify-content-end.pt-2.pb-2
                        .dropdown.mr-3
                            a(href='' data-toggle='dropdown')
                                span.fa.fa-ellipsis-v
                            .dropdown-menu.dropdown-menu-right
                                form(onsubmit="nicknameFormOnSubmit(event)" id='nicknameForm'+_id).px-3.py-3
                                    .form-group
                                        label(for="nickname").sr-only Change Nickname
                                        input(type='text' required placeholder='New Nickname' id="newNickname"+_id).form-control
                                    button(type='submit' onclick='nicknameFormOnClick(event)' id='nicknameSubmit'+_id).btn.btn-dark Change
                        h5.mr-3.mb-0 #{nickname}
                    section.chat-body.pt-2.pb-2
                        .list-group.list-group-flush#user-list
                            include component/list-group-item.pug
                    footer.chat-footer.pl-4.pr-4.pt-2.pb-2.d-flex
                        a(href='/logout').mr-auto.mt-1.mb-1
                            span.fa.fa-sign-out.fa-lg
                        span.fa.fa-lg.fa-search.mt-2


        include component/modal.pug

        script(src='/socket.io/socket.io.js')
        script(src='https://code.jquery.com/jquery-3.3.1.min.js')
        script(src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js")
        script(src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.6.2/js/bootstrap.min.js")
        script(src='/public/list-group-item.js')
        script(src='/public/modal.js')
        script(src='/public/card-self.js')
        script(src='/public/card-not-self.js')
        script(src='/public/card-date.js')
        script(src='/public/script.js')
        
